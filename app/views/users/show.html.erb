<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
        <%=render 'shared/stats'%>
    </section>
    <section>
        <%=@user.liking_works.count%>
        <%=link_to "赞过", liking_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
      <%= render 'follow_form'if logged_in? %>
    <% if @user.works.any? %>
      <h3> 作品(<%= @user.works.count %>) </h3>
          <%= render @works %>
        <%= will_paginate @works %>
    <% end %>
  </div>
</div>
